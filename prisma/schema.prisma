generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  role       Role
  status     UserStatus @default(ACTIVE)
  isVerified Boolean    @default(false)
  createdAt  DateTime   @default(now())

  providerProfile ProviderProfile?
  orders          Order[]
  reviews         Review[]
  categories      Category[]
  meals           Meal[]
  orderItems      OrderItem[]
}

model Meal {
  id            String   @id @default(uuid())
  name          String
  description   String?
  price         Float
  image         String?
  imagePublicId String?
  categoryName  String
  views         Int?
  isAvailable   Boolean  @default(true)
  createdAt     DateTime @default(now())

  userId     String?
  categoryId String?
  providerId String

  user     User?            @relation(fields: [userId], references: [id])
  category Category?        @relation(fields: [categoryId], references: [id])
  provider ProviderProfile? @relation(fields: [providerId], references: [id])

  orderItems OrderItem[]
  reviews    Review[]
  orders     Order[]
}

model ProviderProfile {
  id            String   @id @default(uuid())
  userId        String   @unique
  shopName      String
  description   String?
  address       String
  image         String?
  imagePublicId String?
  isOpen        Boolean? @default(true)
  createdAt     DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id])
  orders     Order[]
  categories Category[]
  meals      Meal[]
}

model Category {
  id                String           @id @default(uuid())
  name              String           @unique
  isActive          Boolean          @default(true)
  meals             Meal[]
  user              User?            @relation(fields: [userId], references: [id])
  userId            String?
  providerProfile   ProviderProfile? @relation(fields: [providerProfileId], references: [id])
  providerProfileId String?
}

enum OrderStatus {
  PLACED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

model Order {
  id              String          @id @default(uuid())
  userId          String
  providerId      String
  mealId          String
  deliveryAddress String
  status          OrderStatus     @default(PLACED)
  totalAmount     Float
  createdAt       DateTime        @default(now())
  payment         String          @default("Cash on Delivery")
  meal            Meal            @relation(fields: [mealId], references: [id])
  address         Address         @relation(fields: [deliveryAddress], references: [id])
  user            User            @relation(fields: [userId], references: [id])
  provider        ProviderProfile @relation(fields: [providerId], references: [id])
  items           OrderItem[]
}

model OrderItem {
  id         String @id @default(uuid())
  orderId    String
  customerId String
  quantity   Int
  price      Float

  order Order  @relation(fields: [orderId], references: [id])
  user  User   @relation(fields: [customerId], references: [id])
  meal  Meal[]
}

model Address {
  id         String  @id @default(uuid())
  roadNumber String?
  postCode   String?
  phone      String
  house      String
  areaName   String
  orders     Order[]
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  userId String
  mealId String

  user User @relation(fields: [userId], references: [id])
  meal Meal @relation(fields: [mealId], references: [id])
}
